<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corneredlayout"
    android:gravity="center"
    android:paddingBottom="@dimen/dp10"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:padding="@dimen/dp10"
        android:text="Save as"
        android:textSize="@dimen/sp22"
        android:id="@+id/saveastxt"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
    android:background="@color/white"
        android:layout_below="@+id/saveastxt"
        android:padding="@dimen/dp30"
        android:id="@+id/save1Layout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    app:cardElevation="@dimen/dp10"
    android:paddingBottom="@dimen/dp5"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp5"
    android:padding="@dimen/dp10"
    android:layout_alignParentLeft="true"
    android:layout_width="100dp"
    android:layout_height="100dp">
    <ImageView
        android:id="@+id/savepdf"
        android:src="@drawable/ic__icon_pdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardElevation="@dimen/dp10"
            android:paddingBottom="@dimen/dp5"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/dp5"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="100dp">
        <ImageView
            android:id="@+id/saveimage"
            android:src="@drawable/ic__icon_jpg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <Button
     android:paddingBottom="@dimen/dp10"
        android:layout_below="@+id/save1Layout"
        android:id="@+id/cancelSave"
        android:padding="@dimen/dp10"
        android:text="Cancel"
        android:background="@drawable/cornered_edges"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18"
        android:gravity="center"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

</RelativeLayout>

