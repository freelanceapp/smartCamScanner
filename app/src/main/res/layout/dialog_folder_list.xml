<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:paddingBottom="@dimen/dp5"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_alignParentTop="true"
    android:id="@+id/savetotxt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/headertxt"
        android:padding="@dimen/dp10"
        android:text="@string/saveto"
        android:textSize="@dimen/sp22"
        android:background="@color/colorAccent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/addFolderButton"
        android:src="@drawable/ic_plus"
        android:layout_centerInParent="true"
       android:padding="@dimen/dp10"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/folder_recycler_view"
        android:scrollbars="vertical"
        android:layout_below="@+id/savetotxt"
        android:layout_width="match_parent"
        android:layout_height="250dp"
      android:layout_margin="@dimen/dp10"

        />


    <RelativeLayout
        android:layout_margin="@dimen/dp10"
        android:layout_below="@+id/folder_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/cancelButton"
            android:paddingTop="@dimen/dp10"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cornered_edges"
            android:text="@string/cancel_txt"
            android:textAllCaps="false"
            android:textSize="@dimen/sp16"
            android:textColor="@color/white" />


    </RelativeLayout>


</RelativeLayout>